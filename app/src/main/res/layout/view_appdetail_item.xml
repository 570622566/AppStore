<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_app_fly"
    android:layout_width="fill_parent"
    android:layout_height="72dp">
    <ImageView
        android:id="@+id/view_app_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="77dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/view_app_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray4A_10"
            android:textSize="18sp"/>
        <LinearLayout
            android:id="@+id/view_app_star_liy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/view_app_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray9B_10"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/view_app_size_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray9B_10"
                android:layout_marginLeft="6dp"
                android:textSize="11sp"/>
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_gravity="right"
        android:background="@drawable/rectangle_button_redwhite_bg"
        android:layout_marginTop="38dp">
        <Button
            android:id="@+id/view_app_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/rectangle_button_redwhite_bg"
            android:padding="0dp"
            android:textSize="14sp" />
    </FrameLayout>

</FrameLayout>
