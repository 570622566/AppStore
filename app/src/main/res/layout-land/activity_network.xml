<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_10">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/backage_color">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="29dp"
            android:background="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="76dp"
            android:textColor="@color/white_10"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="@string/app_name"/>
        <ImageView
            android:id="@+id/activity_network_refresh_img"
            android:layout_width="68dp"
            android:layout_height="69dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="14dp"
            android:src="@drawable/refresh"
            android:padding="20dp"/>

    </FrameLayout>
    <ImageView
        android:layout_width="322dp"
        android:layout_height="204dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/network_land"
        android:layout_marginTop="130dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/black_28_10"
        android:text="@string/network_fails_again"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

</LinearLayout>
