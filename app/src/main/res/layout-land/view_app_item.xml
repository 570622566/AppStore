<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_app_fly"
    android:layout_width="fill_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/view_app_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="110dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/view_app_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray4A_10"
            android:textSize="24sp"/>
        <LinearLayout
            android:id="@+id/view_app_star_liy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/view_app_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray9B_10"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/view_app_size_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray9B_10"
                android:layout_marginLeft="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/rectangle_button_redwhite_bg">
        <Button
            android:id="@+id/view_app_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/rectangle_button_redwhite_bg"
            android:padding="0dp"
            android:textSize="20sp" />
    </FrameLayout>

</FrameLayout>
