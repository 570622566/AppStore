<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayF7_10">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/backage_color">
        <ImageView
            android:id="@+id/activity_search_back_img"
            android:layout_width="71dp"
            android:layout_height="38dp"
            android:src="@drawable/back"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="50dp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/white_14_10"
            android:text="@string/back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="31dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/white_16_10"
            android:text="@string/search"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/search_bg_land">
        <LinearLayout
            android:id="@+id/activity_search_liy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/search_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_application"
                android:layout_marginLeft="5dp"
                style="@style/gray9B_12_10"/>
        </LinearLayout>
        <EditText
            android:id="@+id/activity_search_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            style="@style/gray4A_12_10"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="10"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:focusable="false"/>
    </FrameLayout>
    <ListView
        android:id="@+id/activity_search_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:divider="@null"
        android:scrollbars="none" />
    <TextView
        android:id="@+id/activity_search_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_search_results"
        android:paddingTop="129dp"
        android:gravity="center_horizontal"
        style="@style/gray9B_12_10"
        android:visibility="gone"/>

</LinearLayout>
